@inherits LayoutComponentBase

<MudThemeProvider Theme="theme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0">
        <MudText Typo="Typo.h1">六壬吾心</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Href="https://github.com/yueyinqiu/LiurenSentient.git" Target="_blank" />
    </MudAppBar>
    <MudMainContent>
        <ErrorBoundary>
            <ChildContent>
                <MudContainer Class="pa-13">
                    @Body
                </MudContainer>
            </ChildContent>
            <ErrorContent>
                <ErrorBoundaryContent></ErrorBoundaryContent>
            </ErrorContent>
        </ErrorBoundary>
    </MudMainContent>
</MudLayout>
